@using Maxim.Models
@model Services
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-md-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="Icon" class="form-label">Image File</label>
                <input asp-for="Icon" class="form-control">
                <span asp-validation-for="Icon" style="color:red"></span>
            </div>

        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>